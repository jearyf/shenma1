/* video/components/dcfs-ia-session/dcfs-ia-call/dcfs-ia-call.wxss */
.dcfs-ia-call-wrapper{
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background-image: radial-gradient( #FFFFFF,#EC5C53);
  color: #222222;
  font-size: 40rpx;
}
.dcfs-ia-call-content{
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 90%;
  width: 84%;
  left: 8%;
  top: 5%;
  background: white;
  z-index: 10;
}
.dcfs-ia-call-head-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: 25%;
}
.dcfs-call-company{
  font-size: 36rpx;
  color: #222222;
  font-weight: 600;
  margin-top: 30rpx;
}
.dcfs-ia-call-btn{
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  bottom: 10%;
  left: 0;
  width: 100%;
}
.dcfs-ia-call-img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.dcfs-ia-call-text{
  font-size: 26rpx;
  color: #9B9B9B;
  margin-top: 30rpx;
}
.dcfs-ia-call-hint{
  font-size: 26rpx;
  color: #9B9B9B;
  margin-top: 30rpx;
  text-align: center;
}